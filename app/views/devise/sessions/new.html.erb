<article class="blog-post">
  <div class="row-fluid">
<h2>Login</h2>
<h4>If you come to here the first time, click Login with Salesforce <i class="icon-resize-full"></i> at the top.</h4>
<hr/>
<div class="login-left-block">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="register-input-block email">
    <%= f.email_field :email, placeholder: "Email" %>
  </div>

  <div class="register-input-block password">
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div class="login-remember-block">
    <div id="login_remember_div" class="checkboxOff">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, class: "checkboxOn", id: "loginCheckBox"%>
      <% end -%>
    </div>
    <div class="register-terms-text login-size">Remember me</div>
  </div>

  <%= f.submit "Login", class: "login-button" %>
<% end %>
</div>
</div>
</article>