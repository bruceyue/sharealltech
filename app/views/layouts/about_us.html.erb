<!DOCTYPE html>
<html>
  <head>
    <title>ShareAllTech</title>
    <%= stylesheet_link_tag    :application %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=100%, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no"/>
    <link rel="shortcut icon" href="../assets/favicon.ico" >
  </head>
  <body>
    <!-- start: Top Menu -->
    <%= render "common/social" %>
    <!-- end: Top Menu -->

    <!-- start: Header -->
    <%= render "common/menu" %>
    <!-- end: Header -->

    <!-- start: Container -->
    <div class="container">
      <div class="row-fluid">

        <!-- start: Page section -->
        <section id="page-sidebar" class="pull-left span12">
          <!-- start: Wrapper -->
          <div class="wrapper">
            <!-- start: posts-->
            <%= yield %>
            <!-- end: posts-->
          </div>
          <!-- end: Wrapper -->
        </section>
        <!-- end: Page section -->

      </div>

      <!-- start: Footer -->
      <%= render "common/footer" %>
      <!-- end: Footer -->

    </div>
    <!-- end: Container -->

  </body>
</html>
