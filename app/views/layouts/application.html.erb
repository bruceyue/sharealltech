<!DOCTYPE html>
<html>
  <%= render "common/header" %>
  <body>
    <!-- start: Top Menu -->
    <%= render "common/social" %>
    <!-- end: Top Menu -->

    <!-- start: Header -->
    <%= render "common/menu" %>
    <!-- end: Header -->

    <!-- start: Container -->
    <div class="container">
      <div class="row-fluid">

        <!-- start: Page section -->
        <section id="page-sidebar" class="pull-left span8">
          <!-- start: Wrapper -->
          <div class="wrapper">
            <!-- start: posts-->
            <%= yield %>
            <!-- end: posts-->
          </div>
          <!-- end: Wrapper -->
        </section>
        <!-- end: Page section -->

        <!-- start: Sidebar -->
        <aside id="sidebar" class="pull-right span4">
            <!-- start: Search widget -->
            <%= render "common/search_form" %>
            <!-- end: Search widget -->

            <!-- start: Tag Cloud -->
            <%= render "common/tags" %>
            <!-- end: Tag Cloud -->

            <!-- start: Popular posts -->
            <%= render "common/latest_post" %>
            <!-- end: Popular posts -->

            <!-- start: Blog Archives -->
            <%= render "common/recent_years" %>
            <!-- end: Blog Archives / Accordion -->

            <!-- start: Ads -->
            <%= render "common/ads" %>
            <!-- end: Blog Ads  -->

        </aside>
        <!-- end: Sidebar -->

      </div>

      <!-- start: Footer -->
      <%= render "common/footer" %>
      <!-- end: Footer -->

    </div>
    <!-- end: Container -->

    <!-- GA -->
    <%= render "common/ga" %>
    <!-- end: GA -->
  </body>
</html>
